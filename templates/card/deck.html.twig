{% extends "base.html.twig" %}

{% block title %}Deck of Cards{% endblock %}

{% block body %}
<h1>Deck of Cards</h1>


<div class="deck">
    {% for row in deck|batch(13) %}
    <div class="card-row">
        {% for card in row %}
            {{ card|raw }}
        {% endfor %}
    </div>
    {% endfor %}
</div>

{% endblock %}