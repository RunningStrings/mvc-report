{% extends "base.html.twig" %}

{% block title %}Deck of Cards{% endblock %}

{% block body %}
<h1>{{ title }}</h1>


<div class="deck">
    {% for row in deck|batch(13) %}
    <div class="card-row">
        {% for card in row %}
            {{ card|raw }}
        {% endfor %}
    </div>
    {% endfor %}
</div>

{{ include('flash.html.twig') }}

<div class="about-links">
    <div class="box">
        <a href="{{ path('create') }}" class="repo-link">Skapa ny kortlek</a>
    </div>
</div>

{% endblock %}