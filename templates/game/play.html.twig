{% extends "base.html.twig" %}

{% block title %}21{% endblock %}

{% block body %}
<h1>{{ title }}</h1>

{{ include('flash.html.twig') }}

<div class="col-wrapper">
    <div class="col-left">
        <div class="dealt-cards">
            <div class="player-cards">
                <h2>Spelare: {{ players.player.getName() }}</h2>
                <div>Poäng: {{ players.player.getScore() }}</div>
                <div>Pengar: {{ players.player.getMoney() }}</div>
                <div class="card-row-wrapper">
                    <div class="card-row">
                        {% for card in players.player.getHand().getHand() %}
                            <div class="single-card">
                                {{ card|raw }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% if app.session.get('roundOver') %}
        <div class="row-buttons game-buttons">
            <div class="box">
                <a href="{{ path('game_init') }}" class="repo-link">Spela igen?</a>
            </div>
        </div>
        {% else %}
            {% if app.session.get('betPlaced') %}
                <div class="row-buttons game-buttons">
                    <div class="box">
                        <a href="{{ path('game_hit') }}" class="repo-link">Ta ett kort</a>
                    </div>
                    <div class="box">
                        <a href="{{ path('game_stand') }}" class="repo-link">Stanna</a>
                    </div>
                </div>
            {% else %}
                <div class="row-buttons game-buttons">
                    <form action="{{ path('game_bet') }}" method="post">
                        <label for="amount">Insats:</label>
                        <input type="number" id="amount" name="amount" min="0" required>
                        <button type="submit" class="button">Lägg insats</button>
                    </form>
                </div>
            {% endif %}
        {% endif %}
    </div>
    <div class="col-left">
        <div class="dealt-cards">
            <div class="player-cards">
                <h2>{{ players.bank.getName() }}</h2>
                <div>Poäng: {{ players.bank.getScore() }}</div>
                <div>Pengar: {{ players.bank.getMoney() }}</div>
                <div class="card-row-wrapper">
                    <div class="card-row">
                        {% for card in players.bank.getHand().getHand() %}
                            <div class="single-card">
                                {{ card|raw }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




{% block main %}{% endblock %}

{% endblock %}